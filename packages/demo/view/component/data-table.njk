{% macro dataTable(data, emptyText = 'empty') %}

{% if data.length %}
<table class="data-table">
    <style>
        table.data-table,
        table.data-table th,
        table.data-table td {
            border: 1px solid #eee;
            border-collapse: collapse;
        }

        table.data-table th,
        table.data-table td {
            padding: 0 4px;
            line-height: 2;
        }

    </style>

    <thead>
        <tr>
            {% for k, v in data[0] %}
            <th data-prop="{{ k }}">{{ k }}</th>
            {% endfor %}
        </tr>
    </thead>
    <tbody>
        {% for x in data %}
        <tr>
            {% for k, v in x %}
            <td data-prop="{{ k }}">{{ v }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="no-data">
    &lt;{{ emptyText }}&gt;
</div>
{% endif %}


{% endmacro %}
